@using Blongo.ViewComponents

<!DOCTYPE html>
<html class="no-js no-fa" lang="en">
<head prefix="og: http://ogp.me/ns">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="@(ViewBag._Description ?? ViewBag._BlogDescription)" />
    <meta name="referrer" content="origin-when-crossorigin" />

    @await Component.InvokeAsync(nameof(Favicons))

    <link href="@(@ViewBag._BlogFeedUrl ?? Url.RouteUrl("Atom"))" rel="alternate" title="@Html.Raw(ViewBag._BlogName)" type="application/atom+xml" />

    <title>
        @Html.Raw(string.Join(" &middot; ", new[] { @ViewBag._Title, @ViewBag._BlogName }.Where(s => !string.IsNullOrWhiteSpace(s))))
    </title>

    @Html.Partial("_Styles")

    @await Component.InvokeAsync(nameof(BlogStyles))

    @RenderSection("Styles", false)
</head>
<body class="blongo">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2 col-md-2 p-a-0 left">
                @Html.Partial("_Sidebar")
            </div>

            <div class="col-sm-10 col-sm-offset-2 p-a-0 right">
                <div class="col-lg-9 p-t-1 content">
                    @RenderBody()
                </div>
                <div class="col-lg-3 p-t-1">
                    @await Component.InvokeAsync("FuturePosts")

                    @await Component.InvokeAsync("Tags")

                    @Html.Partial("_Footer")
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_Scripts")

    @RenderSection("Scripts", false)
    
    @await Component.InvokeAsync(nameof(BlogScripts))
</body>
</html>