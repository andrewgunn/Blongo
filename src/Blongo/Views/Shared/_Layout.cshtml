@using Blongo.ViewComponents

<cache expires-after="@TimeSpan.FromDays(1)">
<!--
@await Component.InvokeAsync(nameof(AsciiArt))
-->
</cache>

<!DOCTYPE html>
<html class="no-js no-fa" lang="en">
<head prefix="og: http://ogp.me/ns">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @await Component.InvokeAsync(nameof(MetaDescription))
    <meta name="referrer" content="origin-when-crossorigin" />

    @await Component.InvokeAsync(nameof(FeedLink))

    @await Component.InvokeAsync(nameof(Title))

    @await Component.InvokeAsync(nameof(Favicons))

    @Html.Partial("_Styles")

    @await Component.InvokeAsync(nameof(BlogStyles))

    @RenderSection("Styles", false)
</head>
<body class="blongo">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2 col-md-2 p-a-0 left">
                @await Component.InvokeAsync(nameof(Sidebar))
            </div>

            <div class="col-sm-10 col-sm-offset-2 p-a-0 right">
                <div class="col-lg-9 p-t-1 content">
                    @RenderBody()
                </div>
                <div class="col-lg-3 p-t-1">
                    @await Component.InvokeAsync("FuturePosts")

                    @await Component.InvokeAsync("Tags")

                    @Html.Partial("_Footer")
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_Scripts")

    @RenderSection("Scripts", false)
    
    @await Component.InvokeAsync(nameof(BlogScripts))
</body>
</html>