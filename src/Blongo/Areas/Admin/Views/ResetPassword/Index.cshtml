@using Blongo.Areas.Admin.Models.ResetPassword

@model ResetPasswordModel

@{
    ViewBag._Title = "Reset Your Password";
}

<div class="container-fluid">
    <div class="modal modal-inline">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form method="post" class="login-form">
                    <div class="modal-body m-a-2">
                        <h1 class="text-xs-center m-b-3">
                            Reset Your Password
                        </h1>

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Password" class="sr-only"></label>
                                <div class="input-group">
                                    <span class="input-group-addon input-group-addon-icon"><i class="fa fa-lock"></i></span>
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="@Html.DisplayNameFor(m => m.Password)" />
                                </div>
                            </div>
                            <div class="form-group">
                                <a asp-route="AdminLogin">Know your password?</a>
                            </div>
                        </fieldset>
                    </div>

                    <button type="submit" class="btn btn-success btn-block btn-lg br-t-0"><i class="fa fa-chevron-right"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles
{
    <style>
        .container-fluid {
            position: absolute;
            height: 100%;
            width: 100%;
        }
    </style>
}