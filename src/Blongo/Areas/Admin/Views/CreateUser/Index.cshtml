@using Blongo
@using Blongo.Areas.Admin.Models.CreateUser

@model CreateUserModel

@{
    ViewBag._Title = "Create User";
}

<div class="container-fluid p-t-1">
    <h1 class="m-b-2">
        Create User
    </h1>

    <form method="post">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <fieldset>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    <option selected="@(Model.Role == UserRoles.Administrator)">
                        @UserRoles.Administrator
                    </option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input type="email" asp-for="EmailAddress" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
        </fieldset>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@(@ViewContext.HttpContext.Request.Query["returnUrl"].ToString().AsNullIfEmpty() ?? Url.RouteUrl("AdminListUsers"))" class="btn btn-link">Cancel</a>
        </div>
    </form>
</div>