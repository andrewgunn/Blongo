@using Blongo.Areas.Admin.Models.Login
@model LoginModel

@{
    ViewBag._Title = "Login";
}

<div class="container-fluid">
    <div class="login">
        <h1 class="text-xs-center m-b-2">
            Blongo
        </h1>

        <form autocomplete="off" method="post">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="login-input">
                <fieldset>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="sr-only"></label>
                        <div class="input-group">
                            <span class="input-group-addon input-group-addon-icon"><i class="fa fa-envelope"></i></span>
                            <input type="email" asp-for="EmailAddress" class="form-control" placeholder="@Html.DisplayNameFor(m => m.EmailAddress)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="sr-only"></label>
                        <div class="input-group">
                            <span class="input-group-addon input-group-addon-icon"><i class="fa fa-lock"></i></span>
                            <input type="password" asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)" />
                        </div>
                    </div>
                </fieldset>
            </div>

            <button type="submit" class="btn btn-success btn-block btn-lg br-0"><i class="fa fa-chevron-right"></i></button>
        </form>
    </div>
</div>